                         Width="150"
                         Height="40" 
                         FontFamily="Arial" FontSize="24"
                         TextAlignment="Center"
                         InputScope="Number"
                         PlaceholderText="Begin"
                         MaxLength="7"
                         Margin="60,130,0,0"/>
                <TextBox Name="TxtBxEnd"
